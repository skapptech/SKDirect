{
  "type": "RelativeLayout",
  "android": "http://schemas.android.com/apk/res/android",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "children": [
    {
      "type": "ScrollView",
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "children": [
        {
          "type": "LinearLayout",
          "layout_width": "match_parent",
          "layout_height": "match_parent",
          "orientation": "vertical",
          "children": [
            {
              "type": "RecyclerView",
              "layout_width": "match_parent",
              "layout_height": "match_parent",
              "layout_margin": "10dp",
              "background": "#ffffff",
              "data": {
                "storeCategoryList": "@{data.StoreCategoryList}"
              },
              "layout_manager": {
                "type": "GridLayoutManager"
              },
              "adapter": {
                "@": {
                  "type": "SimpleListAdapter",
                  "item-count": "@{storeCategoryList.$length}",
                  "item-layout": {
                    "type": "LinearLayout",
                    "layout_width": "match_parent",
                    "layout_height": "wrap_content",
                    "layout_margin": "10dp",
                    "data": {
                      "catNameJson": "@{storeCategoryList[$index]}",
                      "catName": "@{catNameJson.CategoryName}"
                    },
                    "orientation": "vertical",
                    "children": [
                      {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "layout_margin": "10dp",
                        "background": "@drawable/bg_all_cet",
                        "orientation": "vertical",
                        "children": [
                          {
                            "type": "TextView",
                            "layout_width": "match_parent",
                            "layout_height": "wrap_content",
                            "layout_marginTop": "10dp",
                            "ellipsize": "end",
                            "gravity": "center",
                            "maxLines": "1",
                            "padding": "2dp",
                            "text": "@{catName}",
                            "textColor": "@color/black",
                            "textSize": "11sp"
                          },
                          {
                            "type": "RecyclerView",
                            "layout_width": "match_parent",
                            "layout_height": "wrap_content",
                            "layout_margin": "10dp",
                            "background": "#ffffff",
                            "data": {
                              "storeListArray": "@{catNameJson.StoreList}"
                            },
                            "layout_manager": {
                              "type": "GridLayoutManagerHorizontal"
                            },
                            "adapter": {
                              "@": {
                                "type": "SimpleListAdapter",
                                "item-count": "@{storeListArray.$length}",
                                "item-layout": {
                                  "type": "LinearLayout",
                                  "layout_width": "wrap_content",
                                  "layout_height": "wrap_content",
                                  "layout_margin": "10dp",
                                  "data": {
                                    "storeListJson": "@{storeListArray[$index]}",
                                    "sellerName": "@{storeListJson.SellerName}",
                                    "sellerImage": "@{storeListJson.ImagePath}"
                                  },
                                  "orientation": "vertical",
                                  "children": [
                                    {
                                      "type": "LinearLayout",
                                      "layout_width": "wrap_content",
                                      "layout_height": "wrap_content",
                                      "layout_margin": "10dp",
                                      "background": "@drawable/bg_all_cet",
                                      "orientation": "vertical",
                                      "children": [
                                        {
                                          "type": "ImageView",
                                          "layout_width": "90dp",
                                          "layout_height": "90dp",
                                          "layout_margin": "5dp",
                                          "onClick": {
                                            "type": "showToast"
                                          },
                                          "scaleType": "centerInside",
                                          "src": "@{sellerImage}"
                                        },
                                        {
                                          "type": "TextView",
                                          "layout_width": "100dp",
                                          "layout_height": "wrap_content",
                                          "layout_marginTop": "10dp",
                                          "ellipsize": "end",
                                          "gravity": "center",
                                          "maxLines": "1",
                                          "padding": "2dp",
                                          "text": "@{sellerName}",
                                          "textColor": "@color/black",
                                          "textSize": "11sp"
                                        }
                                      ]
                                    }
                                  ]
                                }
                              }
                            }
                          }
                        ]
                      }
                    ]
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}