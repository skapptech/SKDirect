<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_address"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_above="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:backgroundTint="#212730"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_current_address"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_map_pin" />


        </RelativeLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-8dp"
            android:background="@color/white">

            <TextView
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Your location"
                style="@style/font_Bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_green_tick" />

                <TextView
                    android:id="@+id/tv_cust_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    style="@style/font_normal_sami_bold"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_change_me"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="change"
                    android:textColor="@color/seller_button_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginVertical="5dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:text="flat_no" />



            <RelativeLayout
                android:id="@+id/other_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:layout_marginVertical="2dp"
                    android:layout_toStartOf="@+id/cancel"
                    android:background="@color/white"
                    style="@style/font_normal_sami_bold"
                    android:gravity="start"
                    android:hint="name"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="13dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="cancel"
                    android:layout_marginEnd="18dp"
                    android:textColor="#EF3828"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="10dp"
                android:background="@drawable/button_drawer"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:maxEms="12"
                style="@style/font_normal_sami_bold"
                android:paddingHorizontal="20dp"
                android:minWidth="125dp"
                android:text="Confirm Location"
                android:textAllCaps="false"
                android:textColor="@color/seller_button_color"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>