<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_address"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_above="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:backgroundTint="#212730"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_current_address"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_gps_icon" />

            <TextView
                android:visibility="visible"
                android:id="@+id/tv_sorry"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_6sdp"
                android:textSize="16sp"
                android:textColor="@color/White"
                android:background="@color/Red"
                android:text="@string/shop_location_must"
                android:layout_height="25dp" />
        </RelativeLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-8dp"
            android:background="@color/White">

            <TextView
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/your_location"
                style="@style/TextStyleSemiBold"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_green_tick" />

                <TextView
                    android:id="@+id/tv_cust_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    style="@style/TextStyleSemiBold"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_change_me"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/change"
                    android:textColor="@color/green_dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginVertical="5dp"
                android:background="@color/view_color_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:text="@string/flat_no" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="7dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_no"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/etShopNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/greyrectangle"
                android:drawablePadding="10dp"
                style="@style/TextStyleSemiBold"
                android:hint="@string/shop_no"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:paddingVertical="13dp"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:paddingEnd="1dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/light_black"
                android:textColorHint="@color/text_hint_color"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="7dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/landmark_optional"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/et_landmark"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/greyrectangle"
                android:drawablePadding="10dp"
                style="@style/TextStyleSemiBold"
                android:hint="@string/landmark_optional"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:paddingVertical="13dp"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:paddingEnd="1dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/light_black"
                android:textColorHint="@color/text_hint_color"
                tools:ignore="Autofill,LabelFor" />

            <RelativeLayout
                android:id="@+id/other_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/btn_bck"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:layout_marginVertical="2dp"
                    android:layout_toStartOf="@+id/cancel"
                    android:background="@color/White"
                    style="@style/TextStyleSemiBold"
                    android:gravity="start"
                    android:hint="@string/name"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="13dp"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:layout_marginEnd="18dp"
                    android:textColor="#EF3828"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="10dp"
                android:background="@drawable/global_btn_grey"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:maxEms="12"
                style="@style/TextStyleSemiBold"
                android:paddingHorizontal="@dimen/_20sdp"
                android:minWidth="125dp"
                android:text="@string/confirm_location"
                android:textAllCaps="false"
                android:textColor="@color/Darkgrey"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>