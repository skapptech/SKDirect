<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_tittle"
            layout="@layout/toolbar_arrow" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_tittle"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    style="@style/font_normal"
                    android:hint="Enter New Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Confirm_password"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                style="@style/font_normal"
                android:hint="Enter Confirm Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                />



        </LinearLayout>

        <Button
            android:id="@+id/bt_save_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/db_button_save"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/font_normal_sami_bold"
            android:layout_alignParentBottom="true"
            android:text="Save"
            android:textColor="@color/seller_button_color"
            android:textStyle="normal" />

    </RelativeLayout>

</layout>