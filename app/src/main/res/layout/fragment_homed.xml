<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_home_search"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorAccentDir"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/et_search_seller"
                        style="@style/font_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/bg_white_rounded"
                        android:drawableLeft="@drawable/ic_search"
                        android:drawablePadding="10dp"
                        android:hint="@string/search_seller"
                        android:imeActionLabel="@string/search_for"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone">

                        <com.kenilt.loopingviewpager.widget.LoopingViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:overScrollMode="never"
                            app:layout_constraintDimensionRatio="3:2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.kenilt.circleindicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_alignBottom="@+id/pager"
                            android:layout_marginBottom="3dp"
                            android:padding="5dp"
                            android:scrollbarSize="20dp"
                            app:fillColor="@color/colorAccentDir"
                            app:radius="20dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_chnage_to_hindi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <include
                            android:id="@+id/layout_chnage_lag"
                            layout="@layout/layout_lag_chnage"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_showing_Cart_in_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/layout_showing_Cart_in_home"
                        layout="@layout/layout_cart_home" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mall_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_top"
                        android:padding="20dp"
                        android:src="@drawable/ic_shoping" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_StoreCategoryList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="-25dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_middle"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_mall_categorice_banner" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_bottom" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main_app_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/mall_not_found"
                        layout="@layout/no_mall_found" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>